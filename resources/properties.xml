<resources>

<strings>
    <string id="AppVersionTitle">App version</string>
    <string id="defaultTimer">Default Start Timer</string>
    <string id="timerPrompt">Default Seconds</string>
    <string id="NumberError">Number Error</string>
    <string id="Breadcrumb">GPS trail</string>
    <string id="gpstrail">display GPS trail</string>

    <string id="waypoint">waypoint</string>
    <string id="lon">longitude</string>
    <string id="lat">latitude</string>
</strings>

<properties>
    <property id="appVersion" type="string">0.1.1</property>
    <property id="defaultTimer" type="number">5</property>
    <property id="breadcrumb" type="boolean">true</property>
    
    <property id="waypoint" type="array"><!-- waypoints location --></property>
    
</properties>
<settings>

    <setting propertyKey="@Properties.appVersion" title="@Strings.AppVersionTitle">
        <settingConfig type="alphaNumeric" readonly="true" />
    </setting>
    
    <setting propertyKey="@Properties.defaultTimer" title="@Strings.defaultTimer" prompt="@Strings.timerPrompt">
        <settingConfig type="numeric" errorMessage="@Strings.NumberError" />
    </setting>

    <setting propertyKey="@Properties.breadcrumb" title="@Strings.Breadcrumb" prompt="@Strings.gpstrail">
        <settingConfig type="boolean"  />
    </setting>

    <!-- waypoints location -->
    <setting propertyKey="@Properties.waypoint" title="@Strings.waypoint"  maxLength="4">        

        <setting title="@Strings.lat" type="string">
            <settingConfig id="lat" type="alphaNumeric"/>
        </setting>
        <setting title="@Strings.lon" type="string">
            <settingConfig id="lon" type="alphaNumeric"/>
        </setting>
        
    </setting>

</settings>

</resources>